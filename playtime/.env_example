# Copy to .env and set your values. Do not commit .env.

# Server port (default: 3000)
PORT=3000

# Session cookie name (default: playtime_session)
cookie_name=playtime_session

# Session cookie encryption password; must be at least 32 characters
cookie_password=your-secret-password-at-least-32-characters-long

# MongoDB connection URI (optional). If set, app uses MongoDB instead of JSON file storage.
# MONGO_URI=mongodb://localhost:27017/playtime
