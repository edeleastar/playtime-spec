<form method="post" action="/dashboard/addplaylist" class="box">
  <div class="field">
    <label class="label" for="title">Playlist title</label>
    <div class="control">
      <input class="input" id="title" name="title" type="text" value="{{payload.title}}" placeholder="New playlist">
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary" type="submit">Add playlist</button>
    </div>
  </div>
</form>
