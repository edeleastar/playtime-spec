<div class="columns is-multiline">
  {{#each playlists}}
    <div class="column is-one-third">
      <div class="box">
        <a href="/playlist/{{_id}}" class="has-text-dark">
          <span class="icon"><i class="fas fa-folder"></i></span>
          {{title}}
        </a>
        <a href="/dashboard/deleteplaylist/{{_id}}" class="button is-small is-danger is-light ml-2" title="Delete playlist" aria-label="Delete playlist">
          <span class="icon"><i class="fas fa-trash"></i></span>
        </a>
      </div>
    </div>
  {{/each}}
</div>
